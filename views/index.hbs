<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants">
        <h4 class="mb-2 search-bar-title">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text"
                 name="keywords"
                 class="form-control"
                 placeholder="輸入餐廳、分類"
                 aria-label="Restaurant Name..."
                 aria-describedby="search-button"
                 value="{{keyword}}" />
          <div class="input-group-append">
            <button class="btn btn-major"
                    type="submit"
                    id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!--dropdown button-->
<form action="/restaurants" method="get" class="position-absolute top-50 end-0" style="padding-right: 6cm;">
  <div class="container mt-2">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-end">
          <div>排列：</div>
          <div>
            <select id="dropdown" class="form-select" style="margin-top: -8px;" name="dropdownValue">
              <option value="A"{{#if A}}selected{{/if}}>A -> Z</option>
              <option value="Z"{{#if Z}}selected{{/if}}>Z -> A</option>
              <option value="category" {{#if category}}selected{{/if}}>類別</option>
              <option value="location"{{#if location}}selected{{/if}}>地區</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  const dropdown = document.querySelector('#dropdown')
  
  dropdown.addEventListener('change', (event) => {
    //event.preventDefault()
    dropdown.form.submit()
  })
  
</script>


 

<!-- restaurant list -->
<div class="container mt-5 px-md-5">
  <div class="row">
    {{#each Resto}}
    <div class="col-12 col-sm-6 col-md-4">
      <a href="/restaurants/{{this.id}}"
        class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top"
            src="{{this.image}}"
            alt="{{this.name}}" />
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this.category}}
            </div>

            <span class="badge rounded-pill bg-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="card-footer d-flex justify-content-end">
            <form action="/restaurants/{{this.id}}/edit" method="get">
              <button class="btn btn-primary">Edit</button>
            </form>

            <form action="restaurants/{{this.id}}" method="get" class="mx-1">
              <button class="btn btn-primary">Detail</button>
            </form>
            <form action="/restaurants/{{this.id}}?_method=delete" method="post">
              <button class="btn btn-danger ">Delete</button>
            </form>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>