{{>message}}
  <div class="card h-auto w-50 mx-auto mt-3 mb-5">
    <div class="text-center mt-3">
      <h1>註冊</h1>
    </div>
    <form action="/users/register" method="post">
      <div class="card-body row align-items-center">

        <!-- Name -->
        <div class="col-3 my-3">
          <label for="name">
            <h5>Name</h5>
          </label>
        </div>
        <div class="col-9 my-3">
          <input type="text" id="name" name="name" placeholder="please input name" class="form-control form-control-lg" >
        </div>

        <!-- Email -->
        <div class="col-3 my-3">
          <label for="email">
            <h5>Email</h5>
          </label>
        </div>
        <div class="col-9 my-3">
          <input type="email" id="email" name="email" placeholder="please input email" class="form-control form-control-lg" required>
        </div>

        <!-- password -->
        <div class="col-3 my-3">
          <label for="password">
            <h5>Password</h5>
          </label>
        </div>
        <div class="col-9 my-3">
          <input type="password" id="password" name="password" placeholder="please input password" class="form-control form-control-lg"
            required>
        </div>
        <!-- confirm_password -->
        <div class="col-3 my-3">
          <label for="check_password">
            <h5>check_password</h5>
          </label>
        </div>
        <div class="col-9 my-3">
          <input type="text" id="check_password" name="check_password" placeholder="please input confirm_password"
            class="form-control form-control-lg" required>
        </div>
        <div class="text-center mt-3">
          <button type="submit" class="btn btn-lg btn-primary" style="width: 300px;">註冊</button>
        </div>
    </form>

    <div class="text-center mt-3">
      <form action="/oauth2_fb/login/facebook" method="GET">
        <button  class="btn btn-lg btn-primary" style="width: 300px;">
          <i class="fab fa-facebook-f"></i> Facebook登入
        </button>
      </form>
    </div>

  </div>

<div class="text-center">
  <p>Already have an account? <a href="/users/login">登入</a></p>
</div>